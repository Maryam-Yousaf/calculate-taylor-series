//sum of 4 digits//

#include<stdio.h>
int main()
{
int num,num1,num2,num3,num4,sum;
printf("enter four digit number");
scanf("%d",&num);
num4=num%10;
num=num/10;
num3=num%10;
num=num/10;
num2=num%10;
num=num/10;
num1=num%10;
printf("first number=%d",num1);
printf("\nsecond number=%d",num2);
printf("\nthird number=%d",num3);
printf("\nfourth number=%d",num4);
sum=num1+num2+num3+num4;
printf("\nsum=%d",sum);
}


